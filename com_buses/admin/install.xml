    <name>COM_BUSES</name>
    <creationDate>November 2015</creationDate>
    <author>Rufel</author>
    <authorEmail>rufelliy@i.ua</authorEmail>
    <authorUrl>http://atas.com</authorUrl>
    <license>License Info</license>
    <version>1.0.1</version>

    <description>COM_BUSES_DESCRIPTION</description>

    <files folder="site">

        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
        <folder>css</folder>
        <folder>js</folder>

        <filename>buses.php</filename>
        <filename>controller.php</filename>

    </files>

    <languages folder="site">
        <language tag="en-GB">language/en-GB/en-GB.com_buses.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.com_buses.ini</language>
        <language tag="uk-UA">language/uk-UA/uk-UA.com_buses.ini</language>
