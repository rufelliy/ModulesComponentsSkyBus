                        size="20" />

                <field
                        type="spacer"
                        hr="true" />

                <field
                        name="email"
                        type="email"
                        default=""
                        label="MOD_CONTACT_MAP_EMAIL"
                        description="MOD_CONTACT_MAP_EMAIL_DESC"
                        size="20" />

                <field
                        type="spacer"
                        hr="true" />

                <field
                        name="APIkey"
                        type="text"
                        default=""
