                        description="MOD_CONTACT_MAP_TOWN_DESC"
                        size="20" />

                <field
                        name="region"
                        type="text"
                        default=""
                        label="MOD_CONTACT_MAP_REGION"
                        description="MOD_CONTACT_MAP_REGION_DESC"
                        size="20" />

                <field
                        name="index"
                        type="text"
                        default=""
                        label="MOD_CONTACT_MAP_POST"
                        description="MOD_CONTACT_MAP_POST_DESC"
                        size="20" />

                <field
                        type="spacer"
                        hr="true" />

                <field
                        name="phones"
                        type="note"
                        default=""
